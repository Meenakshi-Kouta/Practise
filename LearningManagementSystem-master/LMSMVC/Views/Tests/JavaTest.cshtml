@model IEnumerable<LMSMVC.Models.Tests>
@{
    ViewBag.Title = "Test-Java";
    Layout = "~/Views/Shared/_LearnerLayout.cshtml";
    <link href="~/Content/Site.css" rel="stylesheet" />
}

<h2>Take the Test</h2>
<meta charset="utf-8" />
<title>JAVA Programming Test</title>
<br />
<h4><b> JAVA Programming Test </b></h4>
<br />
    1. Which of the following is not a Java features?
<br />
<br />
<select id="item1" name="Item 1">
    <OPTION VALUE="null"> Select</OPTION>
    <OPTION VALUE="Use of pointers">Use of pointers</OPTION>
    <OPTION VALUE="Architecture Neutral">Architecture Neutral</OPTION>
    <OPTION VALUE="Object-oriented">Object-oriented</OPTION>
</select>
    <! -- Ansr1, Use of pointers -->
<br />
<br />
    2. ______ is used to find and fix bugs in the Java programs.
<br />
<br />
<select id="item2" name="Item 2">
    <OPTION VALUE="null"> Select</OPTION>
    <OPTION VALUE="JVM">JVM</OPTION>
    <OPTION VALUE="JRE">JRE</OPTION>
    <OPTION VALUE="JDB">JDB</OPTION>
</select>
   <! -- Ansr2, JDB -->
<br />
<br />

   3. What is the return type of the hashCode() method in the Object class?
<br />
<br />

<select id="item3" name="Item 3">
    <OPTION VALUE="null"> Select</OPTION>
    <OPTION VALUE="Object">Object</OPTION>
    <OPTION VALUE="void">void</OPTION>
    <OPTION VALUE="int">int</OPTION>
</select>
    <! -- Ansr3, int -->
<br />
<br />

4. What does the expression float a = 35 / 0 return?
<br />
<br />

<select id="item4" name="Item 4">
    <OPTION VALUE="null"> Select</OPTION>
    <OPTION VALUE="Infinity">Infinity</OPTION>
    <OPTION VALUE="Run time exception">Run time exception</OPTION>
    <OPTION VALUE="0">0</OPTION>
</select>
    <! -- Ansr4, Infinity -->
<br />
<br />
<br />
<button onclick="message()">Check your score here</button>
<br />

@using (Html.BeginForm("EditScore", "Tests", new { id = ViewData["id"] }, FormMethod.Post))
{
    <p>Please, enter your score in the below textbox after taking test!</p>
    <br />
    <input type="text" name="score" />
    <input type="Submit" />
    <br />
    <b>@Html.ActionLink("Submit", "SubmitJava", new { })</b>}

<SCRIPT>
    function message() {
        count = 0
        var a1 = document.getElementById('item1');
        var a2 = document.getElementById('item2');
        var a3 = document.getElementById('item3');
        var a4 = document.getElementById('item4');
        if (a1.value == "null" || a2.value == "null" || a3.value == "null" || a4.value == "null") {
            alert('Please answer all the questions')
        }
        else {


            if (a1.value == "Use of pointers") {
                count = count + 1
            }
            if (a2.value == "JDB") {
                count = count + 1
            }
            if (a3.value == "int") {
                count = count + 1
            }
            if (a4.value == "Infinity") {
                count = count + 1
            }
            alert('Your Score is ' + (count / 4 * 100) + '%')
        }
        var percentage = (count / 4) * 100;
        return percentage;
    }</SCRIPT>
