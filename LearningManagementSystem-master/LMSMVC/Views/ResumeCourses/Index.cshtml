
@model IEnumerable<LMSMVC.Models.ResumeCourse>

@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LearnerLayout.cshtml";
    <link href="~/Content/Site.css" rel="stylesheet" />
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.ActionLink("Start", "Select", new { id = item.CourseID, name = item.CourseName }) |
                @Html.ActionLink("Mark as Complete", "Edit", "ResumeCourses", new { id = item.CourseID, FormMethod.Post })
            </td>
        </tr>
    }

</table>

